<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category.capitalize %></p>

<% if !@restaurant.reviews.empty? %>
  <ul>
    <h3>Reviews</h3>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <p><%= review.content %></p>
      </li>
    <% end %>
  </ul>
<% end %>


<div>
<p><%= link_to 'Add a review',  new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to 'Back to restaurants', restaurants_path %></p>
</div>
